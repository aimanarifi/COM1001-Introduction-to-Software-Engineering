<% @page_title = "Feed" %>
<%= erb :"common/header" %>
<%= erb :"common/nav_bar" %>

<div class = "button"><a href="/new-post">Create Post</a></div>

<!-- TODO - MAKE IT AUTOMATICALLY GET USER, UNI AND TAGS -->
<section>
    <% if @posts.count > 0 %>
        <% @posts.each do |post| %>
            
            <article class="feed_post">
                <p><b>'<%= h post.title %>'</b></p>
                <p><%= h post.message %></p>
            </article>
            <br>
        <% end %>
    <% else %>
        <p>No posts were found.</p>
    <% end %>
</section>


<%= erb :"common/footer" %>
