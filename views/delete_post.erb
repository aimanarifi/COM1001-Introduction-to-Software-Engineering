<body>

    <h1>Delete post</h1>
    <p><strong>Post ID:</strong> <%= h @post[:postID] %></p>

    <form method="post" action="/delete_post">
        <p>Why the post needs to be deleted?</p>
        <div>
            <% if @report_reason.count > 0 %>
                <% index = 0 %>
                <% @report_reason.each do |reason| %>
                    <% index += 1 %>
                    <input type="radio" id="report<%= h index %>" name="report_reasonID" value="<%= h reason[:report_reasonID] %>" required="required">
                    <label for="report<%= h index %>"> <%= reason[:report_name] %></label><br>
                <% end %>
            <% end %>
        </div>
        <br>

        <input type="hidden" name="postID" value="<%= h @post[:postID] %>" >
        <input type="submit" value="Delete post">

    </form>

</body>